{
    "extends": ["airbnb-base", "prettier"],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": false,
        "experimentalObjectRestSpread": true
      }
    },
    "plugins": ["import"],
    "env": {
      "node": true,
      "es6": true
    },
    "rules": {
      "indent": ["error", 2],
      "global-require": ["error"],
      "handle-callback-err": ["error"],
      "no-console": 1,
      "no-new": 0,
      "import/no-import-module-exports": 0
    }
  }
  